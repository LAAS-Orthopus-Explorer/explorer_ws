<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="simulation_gazebo" params="">

    <!-- ros_control plugin -->
    <gazebo>
      <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control_simulation">
        <parameters>$(find disabled_simulator)/config/simulation_controllers.yaml</parameters>
      </plugin>
    </gazebo>

  </xacro:macro>

</robot>
